<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_category_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="23dp"
    android:background="@color/home_item_category_background"
    android:gravity="center"
    android:orientation="vertical">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/item_category_image"
        android:layout_width="71dp"
        android:layout_height="71dp"
        android:background="@drawable/selector_category_bg"
        android:src="@drawable/ic_phone_white"
        android:scaleType="center"
        app:shapeAppearance="@style/circle" />

    <TextView
        android:id="@+id/name_category_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/font_12"
        tools:text="Phone" />

</LinearLayout>